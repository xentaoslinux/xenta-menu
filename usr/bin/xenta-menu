#!/usr/bin/env bash
clear
figlet "Xenta Menu"
echo " Aplikasi Menu Launcher Xenta OS Console Edisi."
echo "                             Authors: Xenta OS Linux"
echo "_________________________________________Versi 1.0.1"
echo ""
PS3='>>  '
options=("Accessories" "Graphics" "Internet" "Multimedia" "Office" "Programing" "Administration" "Quit" )
select opt in "${options[@]}"
do
   case $opt in
           "Accessories")
                echo "Menu Accessories :"
                PS3='>> '
                options=("BC - Calculator" "Nano - Text Editor" "Back to Menu...")
                select opt in "${options[@]}"
                     do
                        case $opt in
                                 "BC - Calculator")
                                  bc
                                  ;;
                                  "Nano - Text Editor")
                                  nano
                                  ;;
                                  "Back to Menu...")
                                  break
                                  ;;
                                 *) echo "Aplikasi tidak ditemukan..."
                       esac
                     done
                ;;
           "Graphics")
                echo "OK Test"
                ;;
           "Internet")
                echo "Menu Internet :"
                PS3='>> '
                options=("Lynx - CLI Internet Browser" "FTP - File Transfer Protokol" "SFTP - Secure File Transfer Protokol" "Back to Menu...")
                select opt in "${options[@]}"
                     do
                        case $opt in
                                 "Lynx - CLI Internet Browser")
                                  lynx https://www.google.com
                                  ;;
                                  "FTP - File Transfer Protokol")
                                  ftp -h
                                  ;;
                                  "SFTP - Secure File Transfer Protokol")
                                  sftp -h
                                  ;;
                                  "Back to Menu...")
                                  break
                                  ;;
                                 *) echo "Aplikasi tidak ditemukan..."
                       esac
                     done
                ;;
           "Multimedia")
                echo "OK Test"
                ;;
           "Office")
                echo "Ok Test"
                ;;
           "Programing")
                echo "OK Test"
                ;;

           "Administration")
                echo "OK Test"
                ;;
           "Quit")
                break
                ;;
          *) echo "Pilihan  tidak ditemukan";;
    esac
done
